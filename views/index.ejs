<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
</head>
<body>
    <h1>Book List</h1>
    <a href="/api/books/create">Add New Book</a>
    <ul>
        <% books.forEach(book => { %>
            <li>
                <a href="/api/books/<%= book.id %>"><%= book.title %></a>
                <a href="/api/books/update/<%= book.id %>">Edit</a>
                <form action="/api/books/<%= book.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
                <a href="/api/books/<%= book.id %>/download">Download</a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
